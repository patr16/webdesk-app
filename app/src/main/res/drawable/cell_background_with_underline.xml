<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Item per lo sfondo colorato -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0F2F7" /> <!-- Colore celestino chiaro (esempio: Light Blue 50 Material Design) -->
            <!-- Puoi usare @color/tuo_colore_celeste se lo definisci in colors.xml -->
        </shape>
    </item>

    <!--android:width="1dp"                            Spessore della linea  -->
    <!-- android:color="@android:color/darker_gray" /> Colore della linea (puoi cambiarlo) -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp"> // Nasconde i bordi superiore, sinistro e destro
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
            android:color="@android:color/darker_gray" />
        </shape>
    </item>
</layer-list>