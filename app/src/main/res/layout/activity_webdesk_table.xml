<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Pulsante Elimina in alto a destra -->
    <ImageButton
        android:id="@+id/buttonDeleteRow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/site_delete"
        android:contentDescription="Delete Row"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Home"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- HEADER SINISTRO -->

    <ImageButton
        android:id="@+id/buttonResetSort"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="152dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Reset Sort"
        android:padding="8dp"
        android:src="@drawable/site_refresh"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerLeft"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#DDDDDD"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteRow"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- HEADER DESTRO dentro HorizontalScrollView -->
    <HorizontalScrollView
        android:id="@+id/headerScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteRow"
        app:layout_constraintStart_toEndOf="@id/headerLeft"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Riga header colonne destre -->
        <LinearLayout
            android:id="@+id/headerRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/headerType1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Type1"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/headerType2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Type2"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/headerOrder1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Order1"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/headerOrder2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Order2"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/headerFlag1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Flag1"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/headerFlag2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Flag2"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:background="#DDDDDD"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView sinistro -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLeft"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/headerLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scroll e RecyclerView destro -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/headerScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerViewLeft"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
