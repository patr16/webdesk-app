<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Buttons -->
    <ImageButton
        android:id="@+id/buttonChooseColumns"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Choose Columns"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/table"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonWeb"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0" />

    <ImageButton
        android:id="@+id/buttonWeb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Web Site"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/web"
        app:layout_constraintTop_toTopOf="@id/buttonChooseColumns"
        app:layout_constraintStart_toEndOf="@id/buttonChooseColumns"
        app:layout_constraintEnd_toStartOf="@+id/buttonResetSort"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/buttonResetSort"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Reset Sort"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/site_refresh"
        app:layout_constraintTop_toTopOf="@id/buttonChooseColumns"
        app:layout_constraintStart_toEndOf="@id/buttonWeb"
        app:layout_constraintEnd_toStartOf="@+id/buttonHideKeyboard"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/buttonHideKeyboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Hide Keyboard"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/keyboard"
        app:layout_constraintTop_toTopOf="@id/buttonChooseColumns"
        app:layout_constraintStart_toEndOf="@id/buttonResetSort"
        app:layout_constraintEnd_toStartOf="@+id/buttonDeleteRow"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/buttonDeleteRow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Row"
        android:scaleType="fitCenter"
        android:src="@drawable/site_delete"
        app:layout_constraintTop_toTopOf="@id/buttonChooseColumns"
        app:layout_constraintStart_toEndOf="@id/buttonHideKeyboard"
        app:layout_constraintEnd_toStartOf="@+id/buttonHome"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Home"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home1"
        app:layout_constraintTop_toTopOf="@id/buttonChooseColumns"
        app:layout_constraintStart_toEndOf="@id/buttonDeleteRow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"  />

    <!-- HEADER SINISTRO -->
    <TextView
        android:id="@+id/headerLeft"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Name"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:background="#DDDDDD"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteRow"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- HEADER DESTRO dentro HorizontalScrollView -->
    <HorizontalScrollView
        android:id="@+id/headerScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteRow"
        app:layout_constraintStart_toEndOf="@id/headerLeft"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Riga header colonne destre -->
    <LinearLayout
        android:id="@+id/rightTableHeaderLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- I TextView dell'header verranno aggiunti qui programmaticamente -->
    </LinearLayout>

</HorizontalScrollView>

    <!-- RecyclerView sinistro -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLeft"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/headerLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RECYCLER VIEW DESTRA -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintTop_toBottomOf="@id/headerScrollView"
        app:layout_constraintStart_toEndOf="@id/recyclerViewLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
