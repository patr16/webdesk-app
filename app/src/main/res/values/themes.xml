<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- <style name="Theme.Webdesk" parent="Theme.MaterialComponents.Light.NoActionBar">  -->
   <style name="Theme.Webdesk" parent="Theme.AppCompat.Light.NoActionBar">

  <!--<style name="Theme.Webdesk" parent="Theme.MaterialComponents.Light.NoActionBar">  -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
       <item name="colorOnBackground">@color/white</item>
       <item name="android:textColorHint">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Webdesk.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="layout_constraintWidth_percent">0.35</item> <!-- 35% label -->
    </style>

    <style name="FormEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="layout_constraintWidth_percent">0.65</item> <!-- 65% campo -->
    </style>

    <style name="FieldLabel">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FieldInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>